<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDFDFD"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/dm_serif_text"
        android:paddingHorizontal="@dimen/_5sdp"
        android:text="DOUBLE MUSCLE WORKOUT"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:cardCornerRadius="8dp"
        android:layout_height="@dimen/_110sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_height="@dimen/_80sdp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/titleimg" />


        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_9sdp"
            android:text="Hustle for the muscle!"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/dm_serif_text" />


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_serif_text"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="4x Challenge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:text="(workout tracker coming soon)"/>

    </LinearLayout>



    <GridLayout
        android:background="@drawable/border1"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:columnCount="2"
            android:rowCount="1"
        android:backgroundTint="@color/white"
            android:padding="@dimen/_2sdp"
        >

            <androidx.cardview.widget.CardView
                android:id="@+id/noEbtn"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_1sdp"
                android:backgroundTint="@color/white"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginRight="@dimen/_1sdp"
                app:cardCornerRadius="8dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_2sdp"
                        android:src="@drawable/moe" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="@dimen/_9ssp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:paddingHorizontal="9dp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="No equi. full body"
                        android:fontFamily="@font/poppins" />



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fivemintotbtn"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:layout_rowWeight="1"
                android:layout_marginLeft="@dimen/_2sdp"
                app:cardCornerRadius="8dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/abs1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_9ssp"

                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:paddingHorizontal="9dp"
                    android:text="5 mins total abs"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins" />

            </androidx.cardview.widget.CardView>




    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Beginner"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_8sdp"
            android:fontFamily="@font/poppins"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8ssp"
            android:text="Intermediate N Advanced (coming soon)"
            android:layout_marginRight="@dimen/_8sdp"
            android:fontFamily="@font/poppins"/>
        <TextView
            android:id="@+id/logoutbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/border"
            android:backgroundTint="#77767B"
            android:paddingHorizontal="@dimen/_9sdp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_8sdp"
            android:fontFamily="@font/poppins"/>

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/ShouldersAndAbsCard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shoulderchestcard"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOULDERS AND ABS"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_5sdp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ChestAndTricepsCard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/chestandtricepcard"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHEST AND TRICEP"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_5sdp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/BackAndBicepCard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/backcard"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK AND BICEP"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_5sdp"
                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>






</LinearLayout>
